{#=== OPTIONS ========================================================================================================#}

{% set option = {
    class:  field.class|default(''),
    label:  field.label|default(''),
    info:   field.label|default('')
}%}

{#=== INIT ===========================================================================================================#}

{% set attr_date = {
    class:  option.class~' datepicker',
    id:     key~'-date',
    name:   key~'-dateformatted',
    type:   'text',
    value:  (context.content.get(key) and (context.content.get(key) > '0001-01-01 00:00:00') ? context.content.get(key)|date('l, d F Y') : ''),
}%}

{% set attr_time = {
    class:  option.class~' timepicker',
    id:     key~'-time',
    name:   key~'-timeformatted',
    type:   'time',
    value:  (context.content.get(key) and (context.content.get(key) > '0001-01-01 00:00:00') ? context.content.get(key)|date('H:i') : ''),
}%}

{% set attr_hidden = {
    name_id:  key,
    type:     'hidden',
    value:    context.content.get(key)|date('Y-m-d H:i:s'),
}%}

{#=== FIELDSET =======================================================================================================#}

<fieldset class="datetime">

    <label class="col-sm-3 control-label">{{ (option.info) ? macro.infopop(labelkey, option.info) : labelkey }}</label>
    <div class="col-sm-9">
        <input{{ macro.attr(attr_date) }}>
        <input{{ macro.attr(attr_time) }}>
        <input{{ macro.attr(attr_hidden) }}>
    </div>

</fieldset>

{#=== SCRIPT =========================================================================================================#}

<script>
$(function() {
    $('#{{key}}-date, #{{key}}-time').on('change.bolt', function(){
        var date = $('#{{key}}-date').datepicker("getDate");
        var time = $('#{{key}}-time').val() + ":00";
        $('#{{ key }}').val($.datepicker.formatDate('yy-mm-dd', date)+" "+time);
    }).trigger('change.bolt');
});
</script>
