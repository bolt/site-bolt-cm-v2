{# Page: NavSecondary > Content > … > View … > Recent modifications > Full list #}

{% from '_macro/_changelog_details.twig' import changelog_details %}
{% from 'changeloglist/_macros.twig' import changelog_pager %}

{% extends '_base/_page-nav.twig' %}

{% block page_nav 'Content/*' %}

{% block page_title __('Change Log') %}

{% block page_subtitle context.title %}

{% block page_main %}

    <div class="row">
        <div class="col-xs-12">
            {{ changelog_pager(context.currentpage, context.pagecount) }}

            <div class="changelog-list">
                {% for entry in context.entries %}
                    {{ changelog_details(entry) }}
                {% endfor %}
            </div>

            {{ changelog_pager(context.currentpage, context.pagecount) }}

            {% if context.contenttype.slug %}
                <a href="{{ path('editcontent', {'contenttypeslug': context.contenttype.slug, 'id': context.content.id}) }}">
                    {{ __('back to editing') }}
                </a>
            {% endif %}
        </div>
    </div>

{% endblock page_main %}
