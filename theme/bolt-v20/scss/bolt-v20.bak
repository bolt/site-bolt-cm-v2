/* ICONS --------------*/

.doticon{
    content: '\2022\a0';
    font-size: 2.3rem;
    line-height: 0;
    vertical-align: -4px;
}

/* -------------LAY-OUT-------------- */

body {
    background: $lightgrey;
    font-family: $sans-serif;
}

header, footer, .container {
    @extend .row;
    background: $white;
    &.fullwidth {
        padding: 0;
    }
    &:after {
      content: "";
      display: table;
      clear: both;
    }
    // MEDIUM //
    @media #{$large} {
        padding: 0 2em;
    }
}

.container {
    padding-top: 2em;
    padding-bottom: 2em;
}

.inner {
    @extend .columns;
}

aside {
    @extend .columns;
    //background: #f06;
    // LARGE //
    @media #{$large} {
        @extend .large-4;
        //@extend .right;
        margin-top: 49px;
    }
}

.body-home aside {
    // LARGE //
    @media #{$large} {
        @extend .large-4;
        margin-top: 0;
    }
}

.main {
    @extend .columns;
    //background: #f60;
    // LARGE //
    @media #{$large} {
        @extend .large-8;
    }
}

nav {
    margin-bottom: 2em;
}


.block {
    background: $darkgrey;
    padding: 1em;
    &:after {
      content: "";
      display: table;
      clear: both;
    }
    p {
        color: $white;
    }
    h2 {
        color: $white;
        font-size: 1.375em;
    } 
    .button {
        display: block;
        width: auto;
        margin-bottom: 0;
        margin: 0 auto;
        max-width: 180px;
    }
    .inner & {
        // LARGE //
        @media #{$medium} {
            p {
                float:left;
                width: 66%;
            }
            .button {
                float: right;
                width: 30%;
            }
        }
    }
}

.content-list {
    list-style: none;
    margin-left: 0;
    li {
        list-style: none;
        margin-bottom: 3em;
        // MEDIUM //
        @media #{$medium-up} { 
            float:left;
            width: 50%;
            padding-left:0;
            padding-right: 0.9375rem;
            clear:left;
            &:nth-child(2n){
                padding-left: 0.9375rem;
                padding-right: 0;
                clear:right;
                }
            }
        p {
            margin-bottom: 0;
        }
    }
    h3{
        font-size: 1.125em;//18px
        &:before {
            @extend .doticon;
            color: $red;
            font-size: 2.5rem;    
        }
    }
}

/* ------------- only display non-retina, tenzij retina---------------- */

img.retina {
    display: none;
}

@media (min--moz-device-pixel-ratio: 1.5), //retina checks
       (-o-min-device-pixel-ratio: 3/2),
       (-webkit-min-device-pixel-ratio: 1.5),
       (min-resolution: 1.5dppx) {
    img.retina {
        display: block;
    }
    img.non-retina {
        display: none;
    }
}

    
    
/* -------------header---------------- */

header {
    padding-top: .5em; 
    height: 135px;   
}

nav ul {
    list-style: none;
    margin: 0;
    li{
        list-style: none;
    }
    a {
        color: $black;
        font-size: 1.125em; //18px
    }
}

ul.language-nav {
    float: right;
    margin: .3em 0 0 1em;
    li a {
        background: url(../images/flag_en.png) no-repeat top left;
        background-size: 36px 24px;
        display: block;
        width: 36px;
        height: 24px;
        text-indent: -5000px;
        // MEDIUM //
        @media #{$medium-up} { 
            background-size: 24px 18px;
            width: 24px;
            height: 18px;
        }
    }
    li.nl a {
        background: url(../images/flag_nl.png) no-repeat top left;
        background-size: 36px 24px;
        // MEDIUM //
        @media #{$medium-up} { 
            background-size: 24px 18px;
         }
    }
}

ul.simple-nav {
    float:right;
    display: none;
    list-style: none;
    // MEDIUM //
    @media #{$medium-up} { 
        display: inline;
        li {
            display: inline-block;
            margin-left: 1em;
        }
    }
}

ul.full-nav {
    margin: 1em -1em;
    display: none;
    li {
        background: $white;
        border-bottom: 1px solid $mediumgrey;
        padding: .7em ;
        padding-left: 3em;
        a {
            font-weight: bold;
            &:before {
               @extend .doticon;
               color: $red;
               margin-left: -.8em;
            }
            &.mainpage:before {
               @extend .doticon;
               color: transparent;    
            }
        }  
        &.active {
            background: $darkgrey;
            a {
                color: $white;
                &:before {
                   @extend .doticon;
                   color: $white;
                }

                &.mainpage:before {
                @extend .doticon;
                color: transparent;    
                } 
            }    
        }    
    }
    &.expanded {
        display: block;
        @media #{$medium-up} { 
            display: none;
        }
    }
    // MEDIUM //
    @media #{$medium-up} { 
        display: none;
    }
    
}

.menu-toggle {
    font-size: 1.125em;
    width: 100px;
    padding-left: 30px;
    position: relative;
    line-height: 1.7;
    font-weight: bold;
    span {
        position: absolute;
        top: 0px;
        left: 0px;
        display: block;
        height: 1px;
        width: 20px;
        box-shadow: 0 10px 0 1px $black, 0 16px 0 1px $black, 0 22px 0 1px $black;
    }
    &.active {
        color: $red;
        span{
            box-shadow: 0 10px 0 1px $red, 0 16px 0 1px $red, 0 22px 0 1px $red;
        }
    }
    // MEDIUM //
    @media #{$medium-up} { 
        display: none;
    }
}

#logo {
    width: 270px;
    margin: 0 auto .5em;
    // MEDIUM //
    @media #{$medium-up} { 
        margin: 30px 0 0 0;
    }

}

/* ------------- Homepage -------------- */

.image-container {
    // MEDIUM //
    @media #{$medium-up} { 
        position: relative;
    }
}

.pay-off {
    font-size: 1.5rem;
    color: $white;
    text-shadow: 3px 3px 3px rgba($black,0.5);
    margin: -2.5em 5% 1em 5%;
    width: 90%;
    text-align: center;
    font-weight: normal;
   // MEDIUM//
    @media #{$medium-up} { 
        font-size: 3rem;
        position: absolute;
        bottom: 3em;
        right: 2em;
        margin: 0;
        width: auto;
    }

}

.body-home .content-row .intro {
    // MEDIUM //
    @media #{$medium-up} { 
       margin-top: -8em;
       background: $white;
       padding: 2em 2em 0 2em;
    }
}

.clickable {
    cursor: pointer;
}


/* -------------- Tekst pages ----------------- */

ul.subnav {
    list-style: none;
    //margin-left: -.5em;
    margin-left:0;
    li {
        list-style: none;
        margin:0 0 1em;
        padding-left: 1.8em;
        // MEDIUM //
        @media #{$medium-only} {
            width: 50%;
            float: left;
        }
        a {
            display: inline-block;
            padding: .3em 0;
            color: $black;
            font-size: 1.125rem; //18px
            font-weight: bold;
            &:before {
                @extend .doticon;
                color: $red;
                margin-left: -.63em;
            }
        }
        &:hover, &.active {
            background: $darkgrey;
            a{
                color: $white;
                &:before {
                    @extend .doticon;
                    color: $white;
                }
            }
        }
    }
}

.body-page aside {  //hide the aside , containing only a subnav, on small screen
    display: none;
    // MEDIUM //
    @media #{$medium-up} {
        display: block;
    }
}

.mainimg {
    margin-bottom: 2em;
}






/* -------------- Footer ----------------- */

a.backlink {
    display: block;
    text-align: right;
    // MEDIUM //
    @media #{$medium-up} { 
        display:none;
    }
    
}

.balls {
    font-size: 2.3rem;
    margin-bottom: .8em;
    span {
        margin:0;
        display: inline-block;
    }
}


@for $i from 1 through 10 {
  #ball-#{$i} {
     color: lighten($red,4*$i);
  }
}


/* ------------- Typography -------------- */

h1 {
    color: $red;
    .main & {
        margin-bottom: 1em;
    }
}

p a, .main li a {
    text-decoration: underline;
    &:hover {
        text-decoration: underline;
    }
}

a.readmore {
    font-size: .75rem; //12px;
    text-decoration: underline;
    &:hover {
        text-decoration: underline;
    }
}

.sectionheader {
    color: $red;
    font-size: 2rem;
    font-weight: normal;
    margin-bottom: 2em;
}

.intro p{
    font-size: 1.125rem;
    &:last-child{
        margin-bottom: 0;
    }
}

aside h2, aside h3 {
    color: $red;
}

.main h2 {
    margin-top: 2em;
}



/* -------------Buttons and Forms-------------- */

.button, button, input[type='submit'] {
    @extend .button;
    padding: 0.5em 1em 0.5em .8em;
    &:before {
        @extend .doticon;
    }
    
}

.button:hover, button:hover, input[type='submit']:hover {
    @extend .button:hover;   
}

form.simpleform input[type="text"],
form.simpleform input[type="password"],
form.simpleform input[type="email"],
form.simpleform textarea,
form.simpleform select {
    width: 400px;
}

form.simpleform textarea {
    min-height: 130px;
}

form.simpleform label.required:after {
    color: $red;
}


/* -------------Animation --------------------*/

.ball {
    color: $white;
    -webkit-animation-name:ballFade;
    -webkit-animation-duration:8s;
    -webkit-animation-iteration-count:infinite;
    -webkit-animation-direction:linear;
    animation-name:ballFade;
    animation-duration:8s;
    animation-iteration-count:infinite;
    animation-direction:linear;
}


@for $i from 1 through 10 {
    .ball-#{$i} {
        -webkit-animation-delay:(#{$i*0.4s}); 
        animation-delay:(#{$i*0.4s}); 
        //  color: #(1*$i);
        //color: lighten($red,4*$i);
        .no-cssanimations & {
            color: lighten($red,4*$i);
        }
    }
}


@-webkit-keyframes ballFade {
    0% { color:$red; }
    50% { color: $white }
    100% { color: $red }

}

@keyframes ballFade {
    0% { color:$red; }
    50% { color: $white }
    100% { color: $red }

}