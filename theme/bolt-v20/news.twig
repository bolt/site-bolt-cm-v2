{% extends "master.twig" %}

{% block bodyclass %}body-news{% endblock %}
          
{% block content %}

<section class="maininfo">
    <div class="maincolumn ">
        {% setcontent news = 'news' orderby '-datepublish' %}
        {% for item in news %}
        <article class="row">
            <h1><a href="{{item.link}}">{{item.title}}</a></h1>
            <h2 class="subheader">{{item.subtitle}}</h2>
            <p class="meta">Published: {{ item.datepublish|date("l j F - H:i") }}</p>
            <div class="articlebody">
                {% if item.image %}
                <a href="{{ item.image|image() }}" class="fancybox">
                    <img src="{{ item.image|thumbnail(700,300) }}">
                </a>
                {% endif %}
                <p>{{ item.excerpt(600) }}</p>
                <a href="{{item.link}}" class="button">Read the full article</a> 
            </div> 
        </article>
        {% endfor %}
                
    </div>
</section>



{% endblock content %}

{% block footer_extra_scripts %}
    <script src="{{paths.theme}}scripts/picturefill.js"></script>
    <script src="{{ paths.theme }}scripts/cycle2.min.js"></script>
    <script src="{{ paths.theme }}scripts/cycle2.swipe.min.js"></script>
{% endblock %}